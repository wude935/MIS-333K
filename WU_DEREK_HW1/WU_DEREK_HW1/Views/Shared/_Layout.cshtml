<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/vertical-timeline/vertical-timeline.css" rel="stylesheet">
    <link href="~/lib/magnific-popup.js/magnific-popup.min.css" rel="stylesheet" >
    <link href="~/css/global.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-md sticky-top navbar-dark bg-primary">
        <div class="container-fluid mx-2">
            <div class="navbar-header">
                <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Derek Wu</a>
            </div>
            <div class="navbar-collapse collapse justify-content-between align-items-center w-100" id="nav-content">
                <ul class="navbar-nav mr-auto">
                    <!--The link to products is provided as an example.  You can add more links for additional pages-->
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index" path="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About" path="/Home/About">About</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Portfolio" path="/Home/Portfolio">Portfolio</a></li>
                </ul>
                <ul class="nav navbar-nav flex-row justify-content-md-center justify-content-start flex-nowrap">
                    <li class="nav-item mx-1">
                        <a class="nav-link" href="https://github.com/wude935">
                            <ion-icon name="logo-github"></ion-icon>
                        </a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link" href="https://www.linkedin.com/in/derekwu35/">
                            <ion-icon name="logo-linkedin"></ion-icon>
                        </a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link" href="mailto:derekwu35@gmail.com">
                            <ion-icon name="mail-sharp"></ion-icon>
                        </a>
                    </li>
                </ul>
                <button type="button" class="resumeBtn btn ml-md-2"  onclick="location.href='@Url.Action("getResume", "Home")'">Resume</button>
            </div>
        </div>
    </nav>
    <main class="d-flex flex-fill">
        @RenderBody()
    </main>
    <script type="module" src="https://unpkg.com/ionicons@5.1.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule="" src="https://unpkg.com/ionicons@5.1.2/dist/ionicons/ionicons.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/lib/vertical-timeline/vertical-timeline.js"></script>
    <script src="~/lib/ScrollMagic/ScrollMagic.min.js"></script>
    <script src="~/lib/magnific-popup.js/jquery.magnific-popup.min.js"></script>
    <!--Custom scripts run here-->
    <script src="~/js/app.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>